{
  "name": "project",
  "version": "1.0.0",
  "description": "SASS compile|autoprefix|minimize and live-reload dev server using Browsersync for static HTML",
  "main": "public/index.html",
  "author": "guigui",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "build:babel": "./node_modules/.bin/babel src/js --out-dir public/js",
    "copy:html": "html-includes --src src --dest public",
    "copy:js": "copyfiles -u 2 src/js/**/*.js public/js",
    "copy:assets": "copyfiles -u 1 assets/* public/assets",
    "copy": "npm-run-all --parallel copy:*",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run copy:js",
    "watch:html": "onchange 'src/**/*.html' -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:* build:* postbuild",
    "minify:css": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "minify:js": "uglifyjs public/js/app.js --compress --mangle",
    "postbuild": "npm-run-all minify:*"
  },
  "dependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "html-includes": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8",
    "uglify-js": "^3.17.4"
  }
}
